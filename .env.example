# ==============================
# DATABASE CONFIGURATION
# ==============================

# Database host (usually 127.0.0.1)
DB_HOST=127.0.0.1

# Database port (default for MariaDB/MySQL is 3306)
DB_PORT=3306

# Database username
DB_USER=

# Database password
DB_PASSWORD=

# Database name
DB_NAME=


# ==============================
# TELEGRAM CONFIGURATION
# ==============================

# Telegram API ID (from my.telegram.org)
TELEGRAM_API_ID=

# Telegram API Hash (from my.telegram.org)
TELEGRAM_API_HASH=

# Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=

# Your Telegram phone number (with country code, example: +989xxxxxxxxx)
TELEGRAM_PHONE_NUMBER=

# Telegram owner/admin IDs (comma separated if multiple)
# Example: 123456789,987654321
TELEGRAM_OWNER_IDS=

# Your self account Telegram ID (numeric ID)
TELEGRAM_SELF_ID=


# ==============================
# SCRIPT CONFIGURATION
# ==============================

# Script version for tracking updates
SCRIPT_VERSION=1.0.0